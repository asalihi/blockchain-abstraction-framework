{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "lib": [ "ES2020" ],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@dlt-selector/*": [
        "*"
      ]
    },
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules"
  ],
  "plugins": [
    {
      "transform": "typescript-transform-paths"
    },
    {
      "transform": "typescript-transform-paths",
      "afterDeclarations": true
    }
  ]
}
