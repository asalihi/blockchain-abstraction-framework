    "shx": "^0.3.3",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.4.4",
    "typescript-transform-paths": "^3.3.1"
  },
